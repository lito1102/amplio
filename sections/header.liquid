                                        <a href="{{ block.settings.mega_menu_heading_link }}">{{ block.settings.mega_menu_column_heading }}</a>
                                      </h5>
                                      <ul class="megamenu__list text-left nav-dropdown__list">
                                        {%- for link in block.settings.mega_menu_links.links -%}
                                          <li class="nav-dropdown__list-item">
                                            <a href="{{ link.url }}" class="nav-dropdown__link">
                                              {{ link.title }}
                                            </a>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </div>
                                    {%- endfor -%}
                                  
                                </div>
                              </div>
                            </div>
