{
  "name": "t:sections.header.name",
  "settings": [
    {
    "type": "select",
    "id": "header_type",
    "label": "Select your header style",
    "options": [
      {
        "value": "header1",
        "label": "Header style 1"
      },
      {
        "value": "header2",
        "label": "Header style 2"
      },
      {
        "value": "header3",
        "label": "Header style 3"
      }
    ],
    "default": "header1"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
