    },
    {
      "type": "range",
      "id": "opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Opacity",
      "default": 100
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Primary menu"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "default": "main-menu",
      "label": "Secondary menu.",
      "info": "This secondary menu is for header style 1 since this header style has a menu in each side."
    },
    {
      "type": "link_list",
      "id": "mobile_menu",
      "default": "main-menu",
      "label": "Mobile Menu"
    },
    {
      "type": "image_picker",
      "id": "mobile_logo",
      "label": "Mobile Logo"
    },
    {
      "type": "range",
      "id": "mobile_logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "t:sections.header.settings.logo_width.unit",
      "label": "t:sections.header.settings.logo_width.label"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Mega menu column",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "mega_menu_image",
          "label": "Mega menu column image"

        },
        {
          "type": "url",
          "id": "mega_menu_img_link",
          "label": "Image link"
        },
        {
          "type": "text",
          "id": "mega_menu_column_heading",
          "label": "Mega menu column heading",
          "default": "Heading"
        },
        {
        "type": "url",
        "id": "mega_menu_heading_link",
        "label": "Heading link"
        },
        {
          "type": "link_list",
          "id": "mega_menu_links",
          "default": "main-menu",
          "label": "Mega menu"
        }
      ]
    }
  ]
}
